        <Border Background="#011D2B" Opacity="0.8" BorderThickness="8" BorderBrush="#0C4395" Width="500" Height="370" CornerRadius="15">
            <StackPanel >

                <TextBlock Text="Login" FontSize="32" Foreground="Snow" HorizontalAlignment="Center" Margin="0 30 0 0 " Width="150" TextAlignment="Center"/>

                <Border CornerRadius="10 "  Background="#2A4671" Margin="45 45 45 0">
                    <StackPanel Orientation="Horizontal" >
                        <TextBox  md:HintAssist.Hint="Login" Width="350"  Background="#2A4671" Foreground="Snow" VerticalContentAlignment="Center" Padding="3" FontSize="18" BorderThickness="0" md:ShadowAssist.ShadowDepth="Depth4">

                        </TextBox>
                        <md:PackIcon HorizontalAlignment="Right" Kind="User" Height="35" Width="35" Foreground="Snow"  Margin=" 0 10 0 0 "/>


                    </StackPanel>

                </Border>
                <Border CornerRadius="10 "  Background="#2A4671" Margin="45 20 45 0">
                    <StackPanel Orientation="Horizontal" >

                        <!--<PasswordBox x:Name="MyPasswordBox" Password="{Binding Text, Mode=TwoWay, ElementName=MyTextBox}"/>
                        <TextBox x:Name="MyTextBox"  Width="320" Text="{Binding Password, Mode=TwoWay, ElementName=MyPasswordBox}" Visibility="Collapsed" />-->

                        <PasswordBox x:Name="parol_pasbox"    md:HintAssist.Hint="Parol" Width="320"  Background="#2A4671" Foreground="Snow" VerticalContentAlignment="Center" Padding="3" FontSize="18" BorderThickness="0" md:ShadowAssist.ShadowDepth="Depth4">

                        </PasswordBox>

                        <!--<md:PackIcon Name="eye_pasbox"  Kind="Eye" Height="25" VerticalAlignment="Center" Foreground="Snow" Cursor="Hand" Width="30"/>-->
                        <md:PackIcon Kind="Lock" Height="35" Width="100" Foreground="Snow"  Margin=" 0 10 0 0 "/>


                    </StackPanel>

                </Border>

                <!--<ComboBox Margin="45 15 45 5" Background="#011D2B"  >
                    <ComboBoxItem>
                        zovuch
                    </ComboBoxItem>
                    <ComboBoxItem>
                        admen
                    </ComboBoxItem>
                    <ComboBoxItem>
                        o'qituvchi
                    </ComboBoxItem>
                </ComboBox>-->
                <Button x:Name="Kirish_btn" Click="Kirish_btn_Click" FontSize="30"  md:ButtonAssist.CornerRadius="10" Margin="45 40 45 0" Height="45" Background="#0156CB" Content="OK">
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>

