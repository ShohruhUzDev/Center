                <!--Search Teacher Textbox-->
                <Border
                    CornerRadius="10 " 
                    Height="40" 
                    BorderThickness="1" 
                    BorderBrush="#E3ECEB"
                    HorizontalAlignment="Left"
                    Width="300"
                    Background="Transparent"
                    Margin="40 0 0 0 ">


                    <StackPanel 
                        Orientation="Horizontal" 
                        Width="236">

