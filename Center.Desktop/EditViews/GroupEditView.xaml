                        <TextBox 
                            x:Name="SearchGroup_txt"
                           
                                 md:HintAssist.Hint="Nomi"
                                 md:HintAssist.Foreground="Black"
                                 md:HintAssist.HintOpacity="0.4"
                                 FontSize="20" 
                                 Foreground="Black"
                                 Width="236" 
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"
                                 Padding="1" 
                                 BorderThickness="0" 
                                 >

                        </TextBox>

                    </StackPanel>

                </Border>


                <!--Fan buyicha saralash combobox-->
                <Border 
                    CornerRadius="10 "
                    Height="45"
                    BorderThickness="1"
                    BorderBrush="Black"
                    HorizontalAlignment="Left"
                    Width="150"
                    Background="Transparent" 
                    Margin="50 5 10 5">


                    <ComboBox
                        Name="Subjectlar_Cbx"
                        Width="130"
                        md:HintAssist.Hint="Fan"
                        md:HintAssist.Foreground="Indigo"
                        md:HintAssist.HintOpacity="0.5"
                        FontSize="13"
                        
                       >

                    </ComboBox>



                </Border>

                <Border CornerRadius="10 "
                        Height="45"
                        BorderThickness="1"
                        BorderBrush="Black"
                        HorizontalAlignment="Left"
                        Width="170"
                        Background="Transparent"
                        Margin="15 5 20 5">


                    <ComboBox 
                        Name="Teacherlar_Cbx"
                        md:HintAssist.Hint="O'qituvchi"
                              md:HintAssist.Foreground="Indigo"
                              md:HintAssist.HintOpacity="0.5"
                              FontSize="13"
                              Width="150"
                              >


                    </ComboBox>
                </Border>


            </DockPanel>

            <DataGrid 
                x:Name="Students_datagrid"
                HorizontalGridLinesBrush="DarkGray"
                RowBackground="LightGray"
                AlternatingRowBackground="White"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                FontSize="15"
                      Height="505"
                      Margin="10 15 10 10" 
                      BorderThickness="1"
                      BorderBrush="Black" >
                <DataGrid.Columns>
                    <DataGridTextColumn  Binding="{Binding Id}" Header="Id" Visibility="Hidden" Width="300" />
                    <DataGridTextColumn Binding="{Binding FullName}" Header="Ism Familiya" Width="150" />
                    <DataGridTextColumn Binding="{Binding Phone}" Header="Telefon" Width="150" />
                   


                </DataGrid.Columns>

            </DataGrid>

            <Grid
                Width="100"
                Height="70"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
                <md:PackIcon
                            Background="Transparent"
                            Foreground="Black"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Kind="LearnOutline"
                            Height="55"
                            Width="55"/>
                <Border
                            CornerRadius="10"
                            Height="81"
                            BorderThickness="0.1" 
                            Width="83" 
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            RenderTransformOrigin="0.704,0.585" Margin="-1,-14,0,0">


